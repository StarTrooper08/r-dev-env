{ "name": "R Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "docker run --rm -ti -e PASSWORD=rstudio -p 8787:8787 rocker/rstudio"
  },
  "portsAttributes": {
    "8787": {
      "label": "Application"
    }
  },

  "forwardPorts": [8787]
}
